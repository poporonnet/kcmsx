{
  "compilerOptions": {
    "target": "es2024",
    "module": "ESNext",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
